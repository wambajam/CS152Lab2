  <!--Bootstrap Form-->
  <div class="container px-4 mt-5">
    <h2 class="text-center mb-4">LOG IN</h2>
    <form class="offset-lg-2 col-lg-8" action="" method="POST" enctype="multipart/form-data">
    
      <!--USERNAME-->
      <div class="mb-3 col-sm-6">
        <label for="username" class="form-label"> Username </label>
        <input type="text" class="form-control" name="name" required placeholder="Username goes here..."
          id="username" />
      </div>

      <!--PASSWORD-->
      <div class="mb-3 col-sm-6">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          class="form-control"
          id="password"
          placeholder="**********"
          name="password"
          required
        />
      </div>

      <!--CONFIRM PASSWORD-->
      <div class="mb-3 col-sm-6">
        <label for="confirmpassword" class="form-label">Confirm Password:</label>
        <input
          type="confirmpassword"
          class="form-control"
          id="confirmpassword"
          placeholder="**********"
          name="confirmpassword"
          required
        />
      </div>

      <!--TERMS-->
      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="terms" />
        <label class="form-check-label" for="terms">I agree to the terms and coditions.</label>
      </div>

      <!--SUBMIT BUTTON-->
      <button type="submit" class="btn btn-primary">
        Submit
      </button>
    </form>



